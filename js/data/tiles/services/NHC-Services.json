{
  "name": "NHC Services",
  "version": "1",
  "supportedIaaS": ["nhc-vsphere", "nhc-openstack"],
  "sizes": [
    {
      "size": "all",
      "displayName": "All"
    }
  ],
  "jobs":
  [
    {
      "vm": "NHC Installer",
      "staticIPs": 0,
      "dynamicIPs": 1,
      "singleton": true,
      "defaults": {
        "all": {
          "instances": 1,
          "persistentDisk": 0
        }
      },
      "iaas": {
        "nhc-vsphere": {
          "all": {
            "instanceType": "nhc.small",
            "validInstanceTypes": [
              "nhc.small"
            ]
          }
        },
        "nhc-openstack": {
          "all": {
            "instanceType": "m1.small",
            "validInstanceTypes": [
              "m1.small"
            ]
          }
        }
      }
    },
    {
      "vm": "NHC M&R",
      "staticIPs": 0,
      "dynamicIPs": 1,
      "singleton": true,
      "defaults": {
        "all": {
          "instances": 1,
          "persistentDisk": 100
        }
      },
      "iaas": {
        "nhc-vsphere": {
          "all": {
            "instanceType": "nhc.large",
            "validInstanceTypes": [
              "nhc.large"
            ]
          }
        },
        "nhc-openstack": {
          "all": {
            "instanceType": "m1.nhc-mnr",
            "validInstanceTypes": [
              "m1.nhc-mnr"
            ]
          }
        }
      }
    },
    {
      "vm": "NHC S3 Proxy",
      "staticIPs": 0,
      "dynamicIPs": 1,
      "singleton": false,
      "defaults": {
        "all": {
          "instances": 2,
          "persistentDisk": 0
        }
      },
      "iaas": {
        "nhc-openstack": {
          "all": {
            "instanceType": "m1.medium",
            "validInstanceTypes": [
              "m1.medium"
            ]
          }
        }
      }
    },
    {
      "vm": "NHC S3 Storage",
      "staticIPs": 0,
      "dynamicIPs": 1,
      "singleton": false,
      "defaults": {
        "all": {
          "instances": 3,
          "persistentDisk": 200
        }
      },
      "iaas": {
        "nhc-openstack": {
          "all": {
            "instanceType": "m1.medium",
            "validInstanceTypes": [
              "m1.medium"
            ]
          }
        }
      }
    },
    {
      "vm": "NHC Backup",
      "staticIPs": 0,
      "dynamicIPs": 1,
      "singleton": true,
      "defaults": {
        "all": {
          "instances": 1,
          "persistentDisk": 1500
        }
      },
      "iaas": {
        "nhc-vsphere": {
          "all": {
            "instanceType": "micro",
            "validInstanceTypes": [
              "micro"
            ]
          }
        },
        "nhc-vsphere": {
          "all": {
            "instanceType": "m1.small",
            "validInstanceTypes": [
              "m1.small"
            ]
          }
        }
      }
    }
  ]
}
