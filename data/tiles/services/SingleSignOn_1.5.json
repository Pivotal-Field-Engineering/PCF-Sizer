{
  "name": "Single Sign On",
  "version": "1.5.1",
  "supportedIaaS": ["vsphere", "aws", "aws-dedicated", "azure", "gcp", "openstack", "nhc-vsphere"],
  "sizes": [
    {
      "size": "all",
      "displayName": "All"
    }
  ],
  "jobs":
  [
    {
      "vm": "Errands",
      "staticIPs": 0,
      "dynamicIPs": 1,
      "singleton": true,
      "defaults": {
        "all": {
          "instances": 2,
          "persistentDisk": 0
        }
      },
      "iaas": {
        "vsphere": {
          "all": {
            "instanceType": "nano",
            "validInstanceTypes": [
              "nano"
            ]
          }
        },
        "aws": {
          "all": {
            "instanceType": "t2.micro",
            "validInstanceTypes": [
              "t2.micro"
            ]
          }
        },
        "aws-dedicated": {
          "all": {
            "instanceType": "m3.medium",
            "validInstanceTypes": [
              "m3.medium"
            ]
          }
        },
        "azure": {
          "all": {
            "instanceType": "Standard_F1s",
            "validInstanceTypes": [
              "Standard_F1s"
            ]
          }
        },
        "gcp": {
          "all": {
            "instanceType": "micro",
            "validInstanceTypes": [
              "micro"
            ]
          }
        },
        "openstack": {
          "all": {
            "instanceType": "m1.small",
            "validInstanceTypes": [
              "m1.small"
            ]
          }
        },
        "nhc-vsphere": {
          "all": {
            "instanceType": "nano",
            "validInstanceTypes": [
              "nano"
            ]
          }
        }
      }
    }
  ]
}
